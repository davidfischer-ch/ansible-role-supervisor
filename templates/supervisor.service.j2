[Unit]
Description=Supervisor daemon

[Service]
Type=forking
ExecStart={{ supervisor_bin_directory }}/supervisord
ExecStop={{ supervisor_bin_directory }}/supervisorctl $OPTIONS shutdown
ExecReload={{ supervisor_bin_directory }}/supervisorctl $OPTIONS reload
KillMode=process
Restart=on-failure
RestartSec=42s

[Install]
WantedBy=multi-user.target
